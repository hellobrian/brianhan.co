---
import BaseHead from "../components/BaseHead.astro";
import BaseFonts from "../components/BaseFonts.astro";
import DarkModeButton from "../components/DarkModeButton.astro";
import Nav from "../components/Nav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead />
    <BaseFonts />
    <title>{title}</title>
  </head>

  <body>
    <div class="dark-mode-button-position">
      <DarkModeButton />
    </div>
    <div class="BaseLayout">
      <header>
        <div class="profile">
          <span>
            <h1>Brian Han</h1>
          </span>
        </div>
        <div class="nav">
          <Nav />
        </div>
      </header>
    </div>
    <slot />

    <style>
      .dark-mode-button-position {
        width: var(--max-width);
        margin-left: auto;
        margin-right: auto;
        padding-top: 48px;
        position: relative;
      }

      .BaseLayout {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        gap: 4px;
        width: var(--max-width);
        margin: 0 auto;
        margin-bottom: 48px;
        grid-column-start: 2;
      }
      .profile {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }
      h1 {
        color: var(--foreground);
        margin-left: -1.2px;
      }
    </style>
  </body>
</html>
