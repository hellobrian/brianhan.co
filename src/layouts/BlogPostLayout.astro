---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/blog-post-layout.css";
const { frontmatter, headings } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <main>
    <article class="BlogPostLayout">
      <h1>{frontmatter.title}</h1>
      <details>
        <summary>Table of Contents</summary>
        <ul>
          {
            headings.map((heading: { slug: string; text: string }) => (
              <li>
                <a href={`#${heading.slug}`}>{heading.text}</a>
              </li>
            ))
          }
        </ul>
      </details>
      <slot />
    </article>
  </main>
</BaseLayout>
<style>
  details {
    margin-bottom: 24px;
    width: max-content;
  }

  summary {
    color: var(--foreground);
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px;
    border: 4px solid var(--foreground--muted);
    border-radius: 8px;
  }

  summary:hover {
    cursor: pointer;
  }

  summary:focus {
    outline: none;
    border: 4px solid var(--accent);
    border-radius: 8px;
  }

  summary::before {
    content: "üåΩ";
    rotate: 0deg;
    transition: rotate 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  summary:active::before {
    scale: 0.8;
    transition: rotate 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  [open] summary::before {
    content: "üçø";
    rotate: 360deg;
    transition: rotate 200ms cubic-bezier(0.075, 0.82, 0.165, 1);
  }
</style>
