---
const { href } = Astro.props;

import Link from "./Link.astro";
---

<Link href={href} variant="heading" className="ReadMore"
  >Read more <svg
    xmlns="http://www.w3.org/2000/svg"
    height="48"
    width="48"
    viewBox="0 0 48 48"
  >
    <path d="m24 40-2.1-2.15L34.25 25.5H8v-3h26.25L21.9 10.15 24 8l16 16Z"
    ></path>
  </svg>
</Link>
<style>
  :global(.ReadMore) {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  svg {
    fill: currentColor;
    width: 18px;
    height: 18px;
  }
</style>
