---

<nav>
  <ul>
    <li>
      <Link
        className="NavLink"
        variant="heading"
        isActive={pathname === "/"}
        isMuted={pathname !== "/"}
        href="/"
      >
        Home
      </Link>
    </li>
    <!-- <li>
      <Link
        className="NavLink"
